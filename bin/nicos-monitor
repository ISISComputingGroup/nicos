#!/usr/bin/env python

import optparse
from nicos.sessions import SimpleSession

parser = optparse.OptionParser()
parser.add_option('-s', '--fontsize', dest='fontsize', type='int',
                  help='base font size')
parser.add_option('-p', '--padding', dest='padding', type='int',
                  help='base padding')
parser.add_option('-g', '--geometry', dest='geometry', type='string',
                  help='window geometry (WxH+X+Y)')
opts, args = parser.parse_args()

SimpleSession.run('monitor', pidfile=False, start_args=[opts])
