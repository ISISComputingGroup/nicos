<?xml version="1.0"?>

<!-- Konfigurationsdatei vom Cascade-Client -->

<cascade_config>
        <tof_file>
            <image_count> 128 </image_count>
            <foil_count> 6  </foil_count>
            <images_per_foil> 16 </images_per_foil>
            <image_height> 128 </image_height>
            <image_width> 128 </image_width>

            <foil_1_start> 0  </foil_1_start>
            <foil_2_start> 16 </foil_2_start>
            <foil_3_start> 32 </foil_3_start>
            <foil_4_start> 64 </foil_4_start>
            <foil_5_start> 80 </foil_5_start>
            <foil_6_start> 96 </foil_6_start>

            <pseudo_compression> 0 </pseudo_compression>
            <sum_first_and_last> 0 </sum_first_and_last>
            <number_of_oscillations> 2.0 </number_of_oscillations>

            <guess_file_config> 0 </guess_file_config>
        </tof_file>

	<dirs>
		<exp_base_dir> /data/${year}/${proposal_num}/cascade/ </exp_base_dir>
		<proposal_num> 5259 </proposal_num>
	</dirs>

	<graphs>
		<phase_block_size_x> 1 </phase_block_size_x>
		<phase_block_size_y> 1 </phase_block_size_y>

		<contrast_block_size_x> 1 </contrast_block_size_x>
		<contrast_block_size_y> 1 </contrast_block_size_y>

		<bin_count> 100  </bin_count>
		<log_lower_range> -1.0 </log_lower_range>
	</graphs>

	<server>
		<address> miracascade.mira.frm2 </address>
		<port> 1234 </port>

		<status_poll_time> 1000 </status_poll_time>

		<use_message_timeout> 0 </use_message_timeout>
		<message_timeout> 10000 </message_timeout>

        <message_size_limit> 104857600  </message_size_limit>

		<autofetch_use> 1 </autofetch_use>
		<autofetch_poll_time> 1000 </autofetch_poll_time>
	</server>

	<log>
		<level> 3 </level>
		<log_to_file> 0 </log_to_file>
		<file> cascade.log </file>
		<repeat_duplicate_logs> 0 </repeat_duplicate_logs>

		<!-- write temporary data files, e.g. data for plots -->
		<dump_files> 1 </dump_files>
	</log>

	<minuit>
		<maxfcn> 0 </maxfcn>
		<tolerance> 0.1 </tolerance>

		<!-- one of: migrad, simplex, minimize -->
		<algo> migrad </algo>
		<strategy> 1 </strategy>

	    <min_counts> 25  </min_counts>
	</minuit>

	<fourier>
		<use_fft_method_instead> 1 </use_fft_method_instead>

		<!-- -1: shift only sine, 0: zero-order correction, 1: first-order correction -->
		<phase_correction> 0 </phase_correction>
	</fourier>

</cascade_config>
